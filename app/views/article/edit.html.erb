<h1>Edit Article</h1>

<%= form_with model: @article, url: article_path(@article), method: :patch, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :subtopic %>
    <%= form.text_field :subtopic %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
  </div>

  <div>
    <%= form.submit 'Update Article' %>
  </div>
<% end %>

<%= link_to 'Back', article_path(@article) %>
